<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="digitalhouse.com.ar.a0318moacn01c_04.view.fragment.FragmentNoticiaFavoritoDetalle">


    <ScrollView
        android:id="@+id/scrollViewTextoNoticiaFavorita"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relativeLayoutTextoNoticiaFavorita"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imagenNoticiaDetalleFavorita"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/captura"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textURLSiteFavorita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:text="PaginaNoticia.com"
                    android:textColor="@color/colorSecondaryText"
                    />

                <TextView
                    android:id="@+id/textHoraPublicadoFavorita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:gravity="right"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_marginRight="7dp"
                    android:hint="Hace 10hs" />
            </LinearLayout>

            <TextView
                android:id="@+id/textTituloNoticiaFavorita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:hint="Titulo Noticia"
                android:textColor="@color/colorPrimaryText"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textCuerpoNoticiaFavorita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="detalle noticia"
                android:textColor="@color/colorSecondaryText"
                android:textSize="18dp"></TextView>




        </LinearLayout>


    </ScrollView>

</LinearLayout>
