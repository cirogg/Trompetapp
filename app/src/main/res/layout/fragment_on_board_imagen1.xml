<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="digitalhouse.com.ar.a0318moacn01c_04.view.fragment.onboard.image.FragmentOnBoardImagen1"
    >

    <!-- TODO: Update blank fragment layout -->



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/onboard1"
        android:scaleType="fitXY"
        android:id="@+id/diriogif"
        android:background="#00000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b4ef5350"
        android:textColor="@color/colorIcons"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:src="@mipmap/ic_launcher_foreground"
            android:id="@+id/iconoTrompeta"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="18sp"
            android:text="Bienvenido a Trompeta"
            android:textColor="@color/colorIcons"
            android:textSize="50dp"
            android:textStyle="bold"/>
    </LinearLayout>


</FrameLayout>
